# ================================================================
# Private Lawyer Bot - Frontend Environment Configuration
# ================================================================

# API Configuration
# ================
REACT_APP_API_URL=http://localhost:9002
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENABLE_API_CACHE=true

# Application Settings
# ===================
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=2.0.0
REACT_APP_APP_NAME=Private Lawyer Bot

# Feature Flags
# =============
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_DOCUMENTS=true
REACT_APP_ENABLE_LEGAL_RESEARCH=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DARK_MODE=true

# UI Configuration
# ===============
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_CHAT_MAX_MESSAGES=100
REACT_APP_FILE_UPLOAD_MAX_SIZE=10485760

# Supabase Configuration (if using)
# =================================
REACT_APP_SUPABASE_URL=https://your-supabase-project.supabase.co
REACT_APP_SUPABASE_KEY=your-supabase-anon-key

# Analytics & Monitoring (optional)
# =================================
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Development Settings
# ===================
REACT_APP_DEBUG=true
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_ENABLE_LOGGER=true

# Performance Settings
# ===================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_STRATEGY=cacheFirst
REACT_APP_PRELOAD_ROUTES=true

# Security Settings
# ================
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3003

# Production Settings (for production builds)
# ===========================================
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# REACT_APP_SHOW_DEV_TOOLS=false
# REACT_APP_ENABLE_LOGGER=false
# REACT_APP_API_URL=https://your-production-api.com
